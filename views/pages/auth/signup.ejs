<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Signup | My Blog</title>

  <!-- Bootstrap 5 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      font-family: "Inter", sans-serif;
      color: #2b2b2b;
      /* Soft gradient background */
      background: linear-gradient(135deg, #f3f1ed 0%, #eae7e1 100%);
      min-height: 100vh;
    }

    .signup-box {
      background: #fff;
      border-radius: 16px;
      box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
      padding: 2.5rem;
      width: 400px;
      max-width: 90%;
    }

    .signup-box h2 {
      font-weight: 700;
      color: #222;
    }

    .form-control {
      border-radius: 10px;
      padding: 12px;
    }

    .form-control:focus {
      border-color: #198754;
      box-shadow: 0 0 6px rgba(25, 135, 84, 0.4);
    }

    .btn-custom {
      background: #198754;
      border: none;
      border-radius: 10px;
      padding: 12px;
      font-weight: 600;
      color: #fff;
      transition: 0.3s;
    }

    .btn-custom:hover {
      background: #157347;
    }

    .link-btn {
      color: #198754;
      text-decoration: none;
      font-weight: 500;
    }

    .link-btn:hover {
      text-decoration: underline;
    }

    .text-muted {
      color: #6c757d !important;
    }
  </style>
</head>

<body>
  <div class="d-flex justify-content-center align-items-center vh-100">
    <div class="signup-box">
      <!-- Heading -->
      <div class="text-center mb-4">
        <h2>Create Account</h2>
        <p class="text-muted">Join our blog community</p>
      </div>

      <!-- Signup Form -->
      <form action="/signup" method="post">
        <div class="mb-3">
          <input type="text" class="form-control" placeholder="Username" name="username" required />
        </div>
        <div class="mb-3">
          <input type="email" class="form-control" placeholder="Email Address" name="email" required />
        </div>
        <div class="mb-3">
          <input type="password" class="form-control" placeholder="Password" name="password" required />
        </div>
        <div class="mb-3">
          <input type="password" class="form-control" placeholder="Confirm Password" name="confirmPassword" required />
          <div id="password-mismatch" class="text-danger mt-2" style="display:none; font-size: 0.9em;">
            Passwords do not match.
          </div>
        </div>
        <button class="btn btn-custom w-100" type="submit">Sign Up</button>
      </form>

      <!-- Login Redirect -->
      <div class="text-center mt-4">
        <p class="text-muted">Already have an account? <a href="/login" class="link-btn">Login</a></p>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Password match check
    const password = document.querySelector('input[name="password"]');
    const confirmPassword = document.querySelector('input[name="confirmPassword"]');
    const mismatchText = document.getElementById('password-mismatch');

    function checkMatch() {
      if (confirmPassword.value === "") {
        mismatchText.style.display = "none";
        return;
      }
      if (password.value === confirmPassword.value) {
        mismatchText.style.display = "none";
      } else {
        mismatchText.style.display = "block";
      }
    }

    password.addEventListener('input', checkMatch);
    confirmPassword.addEventListener('input', checkMatch);
  </script>
</body>

</html>

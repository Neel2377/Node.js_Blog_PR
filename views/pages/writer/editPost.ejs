<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8"><meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Edit Post • Inkwell</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      font-family: "Inter", sans-serif;
      color: #2b2b2b;
      /* Soft gradient background */
      background: linear-gradient(135deg, #f3f1ed 0%, #eae7e1 100%);
      min-height: 100vh;
    }
    h3 {
      font-family: "Playfair Display", serif;
    }
    .card {
      border-radius: 14px;
      box-shadow: 0 6px 20px rgba(0,0,0,.06);
    }
    .form-control, .form-select {
      border-radius: 10px;
    }
    .btn {
      border-radius: 30px;
      font-weight: 600;
    }
  </style>
</head>
<body>
  <div class="container py-5" style="max-width: 900px;">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h3 class="fw-bold m-0">Edit Post</h3>
      <a class="btn btn-outline-secondary" href="/posts/<%= post._id %>">← Back to post</a>
    </div>

    <form action="/posts/<%= post._id %>/edit" method="POST" enctype="multipart/form-data" class="card p-4">
      <div class="mb-3">
        <label class="form-label">Category</label>
        <select name="category" class="form-select" required>
          <option value="">Select category</option>
          <option <%= post.category === 'Literature' ? 'selected' : '' %>>Literature</option>
          <option <%= post.category === 'Design' ? 'selected' : '' %>>Design</option>
          <option <%= post.category === 'Ideas' ? 'selected' : '' %>>Ideas</option>
          <option <%= post.category === 'Culture' ? 'selected' : '' %>>Culture</option>
        </select>
      </div>
      <div class="mb-3">
        <label class="form-label">Title</label>
        <input name="title" class="form-control" required value="<%= post.title %>">
      </div>
      <div class="mb-3">
        <label class="form-label">Cover Image</label>
        <% if (post.coverUrl) { %>
          <img src="<%= post.coverUrl %>" class="img-fluid rounded mb-2" style="max-width:200px;">
        <% } %>
        <input type="file" name="cover" class="form-control" accept="image/*">
        <div class="form-text">JPG/PNG/WebP. Upload to replace current image.</div>
      </div>
      <div class="mb-3">
        <label class="form-label">Body</label>
        <textarea name="body" class="form-control" rows="10" required><%= post.body %></textarea>
      </div>
      <div class="text-end">
        <button class="btn btn-dark px-4">Update</button>
      </div>
    </form>

    <form action="/posts/<%= post._id %>/delete" method="POST" class="mt-3 text-end" onsubmit="return confirm('Are you sure you want to delete this post?');">
      <button class="btn btn-danger">Delete Post</button>
    </form>
  </div>
</body>
</html>

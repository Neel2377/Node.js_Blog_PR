<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8"><meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= post.title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600&family=Inter:wght@400;500;700&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: "Inter", sans-serif;
      color: #2b2b2b;
      /* Soft gradient background */
      background: linear-gradient(135deg, #f3f1ed 0%, #eae7e1 100%);
      min-height: 100vh;
    }
    h1,h2,h3,h4,h5,h6 {
      font-family: "Playfair Display", serif;
    }
    .content-wrapper {
      background: #fff;
      border-radius: 16px;
      padding: 40px;
      box-shadow: 0 10px 30px rgba(0,0,0,.08);
    }
    .post-title {
      font-weight: 700;
      letter-spacing: -0.3px;
    }
    .post-meta {
      color: #666;
      font-size: 0.9rem;
    }
    .post-body {
      padding: 28px;
      border-radius: 14px;
      border: 1px solid #e2e0da;
      line-height: 1.7;
      background: #fff;
    }
    .btn-like {
      border-radius: 30px;
      padding: 6px 16px;
      font-weight: 600;
    }
    .comment-box {
      border: 1px solid #e2e0da;
      border-radius: 14px;
      padding: 16px;
      background: #fafafa;
    }
    .comment-box textarea {
      border-radius: 12px;
    }
    .list-group-item {
      border: 1px solid #e2e0da;
      border-radius: 10px;
      margin-bottom: 10px;
      background: #fff;
      padding: 14px;
    }
    .comment-author {
      font-weight: 600;
    }
    .comment-time {
      font-size: 0.8rem;
      color: #888;
    }
  </style>
</head>
<body>
  <div class="container py-5" style="max-width: 850px;">
    <div class="content-wrapper">

      <!-- Back link -->
      <a href="/blog" class="text-decoration-none small mb-3 d-inline-block">← Back</a>

      <!-- Title -->
      <h2 class="post-title mt-2"><%= post.title %></h2>
  <p class="post-meta">by <%= post.author ? post.author.username : 'Unknown' %></p>

      <!-- Cover -->
      <% if (post.coverUrl) { %>
        <img class="img-fluid rounded mb-4 shadow-sm" src="<%= post.coverUrl %>" alt="">
      <% } %>

      <!-- Body -->
      <div class="post-body mb-4">
        <%= post.body %>
      </div>


      <!-- Like -->
      <form method="POST" action="/posts/<%= post._id %>/like" class="mb-4 d-inline">
        <button class="btn btn-dark btn-like">❤️ Like (<%= post.likes.length %>)</button>
      </form>

      <a href="/posts/<%= post._id %>/edit" class="btn btn-outline-primary btn-sm ms-2">Edit</a>
      <form method="POST" action="/posts/<%= post._id %>/delete" class="d-inline" onsubmit="return confirm('Delete this post?');">
        <button class="btn btn-danger btn-sm ms-1">Delete</button>
      </form>

      <!-- Comments -->
      <h5 class="mb-3">Comments</h5>
      <form method="POST" action="/posts/<%= post._id %>/comments" class="comment-box mb-4">
        <textarea class="form-control mb-2" name="body" required rows="3" placeholder="Write a comment"></textarea>
        <button class="btn btn-outline-dark btn-sm">Comment</button>
      </form>

      <ul class="list-group">
        <% post.comments.slice().reverse().forEach(c => { %>
          <li class="list-group-item">
            <div class="comment-author"><%= c.author?.username || 'User' %></div>
            <div><%= c.body %></div>
            <div class="comment-time"><%= new Date(c.createdAt).toLocaleString() %></div>
          </li>
        <% }) %>
      </ul>

    </div>
  </div>
</body>
</html>

<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8"><meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Blogify</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600&family=Inter:wght@400;500;700&display=swap" rel="stylesheet">
  <style>
    body {
      background: #f7f9fc;
      font-family: "Inter", sans-serif;
      color: #2b2b2b;
    }
    h1, h2, h3, h4, h5, h6 {
      font-family: "Playfair Display", serif;
    }
    .navbar {
      border-bottom: 1px solid #eaeaea;
      background: #fff;
    }
    .navbar-brand {
      font-weight: 700;
      font-size: 1.5rem;
      letter-spacing: -1px;
    }
    .reader-header {
      margin: 40px 0 30px 0;
      text-align: center;
    }
    .reader-header h1 {
      font-size: 2.5rem;
      font-weight: 700;
    }
    .reader-header p {
      color: #666;
      font-size: 1.1rem;
    }
    .post-list {
      margin-top: 30px;
    }
    .post-list .post-item {
      background: #fff;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0,0,0,.04);
      margin-bottom: 24px;
      padding: 24px 20px;
      transition: box-shadow 0.2s;
    }
    .post-list .post-item:hover {
      box-shadow: 0 6px 24px rgba(0,0,0,.08);
    }
    .post-list .post-title {
      font-size: 1.3rem;
      font-weight: 600;
      margin-bottom: 6px;
    }
    .post-list .post-meta {
      color: #888;
      font-size: 0.95rem;
      margin-bottom: 10px;
    }
    .post-list .post-excerpt {
      color: #444;
      margin-bottom: 10px;
    }
    .post-list .read-link {
      font-weight: 500;
      color: #222;
      text-decoration: underline;
    }
    .no-posts {
      text-align: center;
      color: #aaa;
      margin-top: 60px;
      font-size: 1.2rem;
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg py-3">
    <div class="container">
      <a class="navbar-brand" href="/blog">Blogify</a>
      <div class="d-flex align-items-center gap-2">
        <a href="/reader" class="me-3 text-dark text-decoration-none fw-bold">Reader</a>
        <a href="/posts/new" class="btn btn-dark btn-sm me-3">✍️ Write</a>
        <% if (typeof user !== 'undefined' && user && user.username) { %>
          <span class="me-2 fw-semibold text-primary">Welcome, <%= user.username %>!</span>
          <a href="/logout" class="btn btn-danger btn-sm">Logout</a>
        <% } else { %>
          <a href="/login" class="btn btn-outline-dark btn-sm me-2">Login</a>
          <a href="/signup" class="btn btn-dark btn-sm">Sign Up</a>
        <% } %>
      </div>
    </div>
  </nav>
  <div class="container">
    <div class="reader-header">
      <h1>Reader</h1>
      <p>Browse all blog posts from our community. Click on a post to read in detail.</p>
    </div>
    <div class="post-list">
      <% if (posts && posts.length > 0) { %>
        <% posts.forEach(function(post) { %>
          <div class="post-item">
            <div class="post-title"><a href="/posts/<%= post._id %>" class="text-dark text-decoration-none"><%= post.title %></a></div>
            <div class="post-meta">by <%= post.author?.username || 'Unknown' %> &middot; <%= post.createdAt ? post.createdAt.toLocaleDateString() : '' %></div>
            <div class="post-excerpt"><%= post.excerpt || '' %></div>
            <a href="/blog/posts/<%= post._id %>" class="read-link">Read More &rarr;</a>
          </div>
        <% }) %>
      <% } else { %>
        <div class="no-posts">No posts available yet.</div>
      <% } %>
    </div>
  </div>
</body>
</html>

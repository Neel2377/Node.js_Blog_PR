<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8"><meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Blogify</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600&family=Inter:wght@400;500;700&display=swap" rel="stylesheet">
  <!-- Font Awesome for icons (must be in head for dropdown icons to show) -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"/>
  <style>
    body {
      font-family: "Inter", sans-serif;
      color: #2b2b2b;
      /* Soft gradient background */
      background: linear-gradient(135deg, #f3f1ed 0%, #eae7e1 100%);
      min-height: 100vh;
    }
    h1,h2,h3,h4,h5,h6 {
      font-family: "Playfair Display", serif;
    }

    /* Header */
    .navbar {
      border-bottom: 1px solid #eaeaea;
      background: #fff;
    }
    .navbar-brand {
      font-weight: 700;
      font-size: 1.5rem;
      letter-spacing: -1px;
    }

    /* Hero */
    .hero {
      background: #fff;
      border-radius: 16px;
      overflow: hidden;
      box-shadow: 0 6px 20px rgba(0,0,0,.06);
    }
    .hero img {
      width: 100%;
      height: 380px;
      object-fit: cover;
    }
    .hero .content {
      padding: 20px;
    }

    /* Post cards */
    .post-card {
      background: #fff;
      border-radius: 12px;
      overflow: hidden;
      box-shadow: 0 4px 14px rgba(0,0,0,.05);
      transition: all 0.25s ease;
      height: 100%;
    }
    .post-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 8px 24px rgba(0,0,0,.1);
    }
    .post-card img {
      height: 180px;
      object-fit: cover;
      width: 100%;
    }
    .post-card .content {
      padding: 15px;
    }
    .post-card h6 {
      font-size: 1rem;
      margin-bottom: 6px;
      font-weight: 600;
    }
    .post-card small {
      color: #666;
    }

    /* Sidebar */
    .sidebar-box {
      background: #fff;
      padding: 18px;
      border-radius: 12px;
      box-shadow: 0 4px 14px rgba(0,0,0,.05);
      margin-bottom: 20px;
    }
    .sidebar-box h5 {
      font-weight: 700;
      margin-bottom: 12px;
    }
    .category-list a {
      display: block;
      color: #333;
      padding: 6px 0;
      text-decoration: none;
    }
    .category-list a:hover {
      color: #000;
    }

    /* Newsletter */
    .newsletter input {
      border-radius: 30px;
      border: 1px solid #ccc;
      padding: 8px 14px;
      width: 100%;
    }
    .newsletter button {
      border-radius: 30px;
      margin-top: 8px;
      width: 100%;
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg py-3">
    <div class="container">
      <a class="navbar-brand" href="/blog">Blogify</a>
      <div class="d-flex align-items-center gap-2">
        <a href="/reader" class="me-3 text-dark text-decoration-none">Reader</a>
        <!-- <a href="/write" class="me-3 text-dark text-decoration-none">Writer</a> -->
        <a href="/posts/new" class="btn btn-dark btn-sm me-3">✍️ Write</a>
        <% if (typeof user !== 'undefined' && user && user.username) { %>
          <span class="me-2 fw-semibold text-primary">Welcome, <%= user.username %>!</span>
        <% } %>
        <!-- User dropdown with icon -->
        <div class="dropdown me-3">
          <a class="btn btn-outline-secondary btn-sm dropdown-toggle d-flex align-items-center" href="#" role="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="fa fa-user-circle fa-lg me-1"></i> Users
          </a>
          <ul class="dropdown-menu" aria-labelledby="userDropdown" style="min-width: 260px;">
            <li><a class="dropdown-item" href="/users/manage"><i class="fa fa-users me-2"></i>Manage Users</a></li>
            <!-- <li><hr class="dropdown-divider"></li> -->
            <!-- <li><a class="dropdown-item" href="#" onclick="showAddUserModal(); return false;"><i class="fa fa-user-plus me-2"></i>Add User</a></li> -->
            <li><hr class="dropdown-divider"></li>
            <li class="dropdown-header">User List</li>
            <% if (typeof users !== 'undefined' && users.length > 0) { %>
              <% users.forEach(function(u) { %>
                <li class="d-flex align-items-center px-2 py-1">
                  <span class="flex-grow-1"><i class="fa fa-user me-1"></i> <%= u.username %> (<%= u.role %>)</span>
                  <button class="btn btn-link btn-sm text-primary p-0 me-2" title="Edit" onclick="showEditUserModal('<%= u._id %>', '<%= u.username %>', '<%= u.role %>'); return false;"><i class="fa fa-edit"></i></button>
                  <button class="btn btn-link btn-sm text-danger p-0" title="Delete" onclick="deleteUser('<%= u._id %>'); return false;"><i class="fa fa-trash"></i></button>
                </li>
              <% }) %>
            <% } else { %>
              <li class="px-3 text-muted">No users found.</li>
            <% } %>
          </ul>
  <!-- Edit User Modal -->
  <div class="modal fade" id="editUserModal" tabindex="-1" aria-labelledby="editUserModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="editUserModalLabel"><i class="fa fa-edit me-2"></i>Edit User</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <form id="editUserForm">
          <div class="modal-body">
            <input type="hidden" id="editUserId" name="id">
            <div class="mb-3">
              <label for="editUsername" class="form-label">Username</label>
              <input type="text" class="form-control" id="editUsername" name="username" required>
            </div>
            <div class="mb-3">
              <label for="editRole" class="form-label">Role</label>
              <select class="form-select" id="editRole" name="role" required>
                <option value="reader">Reader</option>
                <option value="writer">Writer</option>
                <option value="admin">Admin</option>
              </select>
            </div>
            <div class="mb-3">
              <label for="editPassword" class="form-label">New Password (leave blank to keep current)</label>
              <input type="password" class="form-control" id="editPassword" name="password">
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Save Changes</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  <script>
    // Show Edit User Modal and fill form
    function showEditUserModal(id, username, role) {
      document.getElementById('editUserId').value = id;
      document.getElementById('editUsername').value = username;
      document.getElementById('editRole').value = role;
      document.getElementById('editPassword').value = '';
      var modal = new bootstrap.Modal(document.getElementById('editUserModal'));
      modal.show();
    }
    // Handle Edit User form submit (AJAX)
    document.addEventListener('DOMContentLoaded', function() {
      var editForm = document.getElementById('editUserForm');
      if(editForm) {
        editForm.addEventListener('submit', function(e) {
          e.preventDefault();
          var id = editForm.id.value;
          var body = {
            username: editForm.username.value,
            role: editForm.role.value
          };
          if(editForm.password.value) body.password = editForm.password.value;
          fetch('/users/' + id, {
            method: 'PUT',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(body)
          })
          .then(res => res.json())
          .then(data => {
            if(data.user) {
              alert('User updated successfully!');
              bootstrap.Modal.getInstance(document.getElementById('editUserModal')).hide();
              location.reload();
            } else {
              alert('Error: ' + (data.error || 'Unknown error'));
            }
          })
          .catch(() => alert('Error updating user.'));
        });
      }
    });
    // Delete user
    function deleteUser(id) {
      if(confirm('Are you sure you want to delete this user?')) {
        fetch('/users/' + id, { method: 'DELETE' })
          .then(res => res.json())
          .then(data => {
            if(data.message) {
              alert('User deleted successfully!');
              location.reload();
            } else {
              alert('Error: ' + (data.error || 'Unknown error'));
            }
          })
          .catch(() => alert('Error deleting user.'));
      }
    }
  </script>
        </div>
        <% if (typeof user !== 'undefined' && user) { %>
          <a href="/logout" class="btn btn-danger btn-sm">Logout</a>
        <% } else { %>
          <a href="/login" class="btn btn-outline-dark btn-sm me-2">Login</a>
          <a href="/signup" class="btn btn-dark btn-sm">Sign Up</a>
        <% } %>
      </div>
    </div>
  <!-- Font Awesome for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"/>
  <!-- Add User Modal (hidden by default) -->
  <div class="modal fade" id="addUserModal" tabindex="-1" aria-labelledby="addUserModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="addUserModalLabel"><i class="fa fa-user-plus me-2"></i>Add User</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <form id="addUserForm">
          <div class="modal-body">
            <div class="mb-3">
              <label for="username" class="form-label">Username</label>
              <input type="text" class="form-control" id="username" name="username" required>
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <div class="mb-3">
              <label for="role" class="form-label">Role</label>
              <select class="form-select" id="role" name="role" required>
                <option value="reader">Reader</option>
                <option value="writer">Writer</option>
                <option value="admin">Admin</option>
              </select>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Add User</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  <script>
    function showAddUserModal() {
      var modal = new bootstrap.Modal(document.getElementById('addUserModal'));
      modal.show();
    }
    // Handle Add User form submit (AJAX)
    document.addEventListener('DOMContentLoaded', function() {
      var form = document.getElementById('addUserForm');
      if(form) {
        form.addEventListener('submit', function(e) {
          e.preventDefault();
          fetch('/users', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
              username: form.username.value,
              password: form.password.value,
              role: form.role.value
            })
          })
          .then(res => res.json())
          .then(data => {
            if(data.user) {
              alert('User added successfully!');
              form.reset();
              bootstrap.Modal.getInstance(document.getElementById('addUserModal')).hide();
            } else {
              alert('Error: ' + (data.error || 'Unknown error'));
            }
          })
          .catch(() => alert('Error adding user.'));
        });
      }
    });
  </script>
  </nav>

  <!-- Main content -->
  <div class="container my-5">
    <div class="row g-4">
      <!-- Left column -->
      <div class="col-lg-8">

        <!-- Hero featured -->
        <% if(posts[0]) { %>
        <div class="hero mb-4">
          <img src="<%= posts[0].coverUrl || 'https://picsum.photos/900/500' %>" alt="">
          <div class="content">
            <h2><%= posts[0].title %></h2>
            <p class="text-muted">by <%= posts[0].author?.username %></p>
            <p><%= posts[0].excerpt || '' %></p>
            <a href="/posts/<%= posts[0]._id %>" class="btn btn-dark btn-sm">Read More</a>
          </div>
        </div>
        <% } %>

        <!-- Grid of posts -->
        <div class="row g-3">
          <% posts.slice(1,9).forEach(p => { %>
            <div class="col-md-6">
              <a href="/posts/<%= p._id %>" class="text-decoration-none text-dark">
                <div class="post-card">
                  <img src="<%= p.coverUrl || 'https://picsum.photos/600/400' %>" alt="">
                  <div class="content">
                    <h6><%= p.title %></h6>
                    <small>by <%= p.author?.username %></small>
                  </div>
                </div>
              </a>
            </div>
          <% }) %>
        </div>

      </div>

      <!-- Sidebar -->
      <div class="col-lg-4">
        <div class="sidebar-box">
          <h5>Categories</h5>
          <div class="category-list">
            <a href="#">📖 Literature</a>
            <a href="#">🎨 Design</a>
            <a href="#">💡 Ideas</a>
            <a href="#">🌍 Culture</a>
          </div>
        </div>
        <div class="sidebar-box">
          <h5>Trending</h5>
          <ul class="list-unstyled">
            <% 
              let trendingPosts = posts.length > 1 ? posts.slice(1, 5) : [];
              trendingPosts.forEach(p => { 
            %>
              <li><a href="/posts/<%= p._id %>" class="text-dark d-block mb-2"><%= p.title %></a></li>
            <% }) %>
            <% if (trendingPosts.length === 0) { %>
              <li class="text-muted">No trending posts yet.</li>
            <% } %>
          </ul>
        </div>
        <div class="sidebar-box newsletter">
          <h5>Subscribe</h5>
          <form>
            <input type="email" placeholder="Your email">
            <button class="btn btn-dark btn-sm mt-2">Subscribe</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <footer class="footer mt-auto py-4 bg-white border-top shadow-sm">
  <div class="container text-center">
    <span class="text-muted d-block mb-2">
      &copy; <%= new Date().getFullYear() %> Blogify · All rights reserved
    </span>
    <div>
      <a href="#" class="text-decoration-none text-secondary me-3">About</a>
      <a href="#" class="text-decoration-none text-secondary me-3">Contact</a>
      <a href="#" class="text-decoration-none text-secondary">Privacy Policy</a>
    </div>
  </div>
</footer>

</div>
<!-- Bootstrap JS (required for dropdowns) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

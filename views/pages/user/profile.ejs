<%- include('../../partials/header') %>
<div class="container mt-5">
  <div class="d-flex align-items-center mb-4">
    <i class="fa fa-user-circle fa-2x me-2" style="color:#007bff;"></i>
    <h2 class="mb-0">User Profile</h2>
  </div>
  <div class="card p-4">
    <form id="profileForm">
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input type="text" class="form-control" id="username" name="username" value="<%= user.username %>" required>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>" required>
      </div>
      <div class="mb-3">
        <label for="role" class="form-label">Role</label>
        <input type="text" class="form-control" id="role" name="role" value="<%= user.role %>" readonly>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">New Password</label>
        <input type="password" class="form-control" id="password" name="password" placeholder="Leave blank to keep current">
      </div>
      <button type="submit" class="btn btn-primary">Update Profile</button>
      <button type="button" class="btn btn-danger ms-2" onclick="deleteProfile()">Delete Profile</button>
    </form>
  </div>
</div>
<%- include('../../partials/footer') %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"/>
<script>
// Handle profile update
const form = document.getElementById('profileForm');
if(form) {
  form.addEventListener('submit', function(e) {
    e.preventDefault();
    const body = {
      username: form.username.value,
      email: form.email.value
    };
    if(form.password.value) body.password = form.password.value;
    fetch('/users/profile', {
      method: 'PUT',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify(body)
    })
    .then(res => res.json())
    .then(data => {
      if(data.user) {
        alert('Profile updated successfully!');
        location.reload();
      } else {
        alert('Error: ' + (data.error || 'Unknown error'));
      }
    })
    .catch(() => alert('Error updating profile.'));
  });
}
// Handle profile delete
function deleteProfile() {
  if(confirm('Are you sure you want to delete your profile? This cannot be undone.')) {
    fetch('/users/profile', { method: 'DELETE' })
      .then(res => res.json())
      .then(data => {
        if(data.message) {
          alert('Profile deleted.');
          window.location = '/logout';
        } else {
          alert('Error: ' + (data.error || 'Unknown error'));
        }
      })
      .catch(() => alert('Error deleting profile.'));
  }
}
</script>
